{
  "name": "garbage-collector",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "yarn workspaces run format",
    "build": "yarn workspaces run build && yarn run combineFiles",
    "combineFiles": "copyfiles --up 2 \"packages/garbo/dist/**\" .; copyfiles --up 2 \"packages/garbo-relay/dist/**\" ."
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": ">=4.2.0"
  }
}
