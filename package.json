{
  "name": "garbage-collector",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -p run build && yarn run combineFiles",
    "combineFiles": "copyfiles --up 2 \"packages/garbo/dist/**\" .; copyfiles --up 2 \"packages/garbo-relay/dist/**\" .",
    "format": "yarn workspaces foreach -p run format",
    "lint": " yarn workspaces foreach -p run lint"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": ">=4.2.0"
  },
  "packageManager": "yarn@3.6.4"
}
